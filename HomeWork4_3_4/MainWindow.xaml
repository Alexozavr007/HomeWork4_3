<Window x:Class="HomeWork4_3_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork4_3_4"
        mc:Ignorable="d"
        Title="HomeWork 4_3_4" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition />
            <RowDefinition Height="40" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        
        <TextBox x:Name="txtUserInput" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2
                 " Background="Beige" />
        <Button x:Name="btnSave" Content="Записати в файл" Grid.Row="2" Grid.Column="1" Click="btnSave_Click" />
        <Button x:Name="btnLoad" Content="Прочитати з файл" Grid.Row="2" Grid.Column="2" Click="btnLoad_Click"  />
    </Grid>
</Window>
